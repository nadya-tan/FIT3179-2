{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "data": {"url": "data/index_combined.json"},
  "params": [
    {
      "name": "country_selector",
      "value": "Australia",
      "bind": {
        "input": "select",
        "options": [
          "Australia",
          "Austria",
          "Belgium",
          "Brazil",
          "Bulgaria",
          "Canada",
          "Chile",
          "China",
          "Colombia",
          "Croatia",
          "Cyprus",
          "Czech Republic",
          "Denmark",
          "Estonia",
          "Finland",
          "France",
          "Germany",
          "Greece",
          "Hungary",
          "Iceland",
          "India",
          "Indonesia",
          "Ireland",
          "Israel",
          "Italy",
          "Japan",
          "South Korea",
          "Latvia",
          "Lithuania",
          "Luxembourg",
          "Macedonia, FYR",
          "Malaysia",
          "Mexico",
          "Morocco",
          "Netherlands",
          "New Zealand",
          "Norway",
          "Peru",
          "Philippines",
          "Poland",
          "Portugal",
          "Romania",
          "Russia",
          "Serbia",
          "Slovak Republic",
          "Slovenia",
          "South Africa",
          "Spain",
          "Sweden",
          "Switzerland",
          "Thailand",
          "Turkey",
          "United Arab Emirates",
          "United Kingdom",
          "United States"
        ],
        "name": "Country"
      }
    },
    {
      "name": "type_selector",
      "value": "nominal",
      "bind": {
        "input": "radio",
        "options": [
          "nominal",
          "real"
        ],
        "name": "Type"
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.type === type_selector && datum.country === country_selector"
    }
  ],
  "layer": [
    {
      "mark": "area",
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "title": "Date",
          "timeUnit": "utcyearmonth"
        },
        "y": {
          "field": "price",
          "type": "quantitative",
          "axis": {
            "title": "Index"
          },
          "scale": {
            "zero": false
          }
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "legend": {
            "title": "Type"
          }
        },
        "tooltip": [
          {
            "field": "date",
            "type": "temporal",
            "title": "Date"
          },
          {
            "field": "price",
            "type": "quantitative",
            "title": "Price"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "red",
        "strokeWidth": 2,
        "strokeDash": [
          4,
          2
        ]
      },
      "encoding": {
        "y": {
          "datum": 100
        }
      }
    }
  ]
}